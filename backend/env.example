# Database
DATABASE_URL=postgresql+asyncpg://data_user:data_userpassword@localhost/data_analysis
# Alternative database configurations:
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/data_analysis
# DATABASE_URL=postgresql+asyncpg://username:password@hostname/data_analysis

# Backend
BACKEND_PORT=4700

# Redis
REDIS_URL=redis://localhost:4378

# Celery
CELERY_BROKER_URL=redis://localhost:4378/0
CELERY_RESULT_BACKEND=redis://localhost:4378/0

# Security
SECRET_KEY=your-secret-key-change-in-production

# Object Storage (S3/MinIO)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET=data-analysis-platform
S3_ENDPOINT_URL=http://localhost:4901  # For MinIO

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Data Analysis Platform

# JMP Configuration
JMP_TASK_DIR=/tmp/jmp_tasks
TASKS_DIRECTORY=/Users/lytech/Documents/service/auto-jmp/backend/tasks
JMP_MAX_WAIT_TIME=300
JMP_START_DELAY=4

# Guest Access
ALLOW_GUEST_ACCESS=true
GUEST_RATE_LIMIT=10
GUEST_MAX_FILE_SIZE=10485760  # 10MB

# Public Media Access (allows direct access to images/attachments without authentication)
# Set to "true" to disable authentication requirements for viewing/downloading images and attachments
# WARNING: This makes all images and attachments publicly accessible if you have the URL
ALLOW_PUBLIC_MEDIA_ACCESS=false

# File Upload
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=["text/csv", "text/plain", "application/octet-stream", "application/x-javascript", "text/x-jmp-script"]

# CORS
BACKEND_CORS_ORIGINS=["http://10.5.216.11", "http://10.5.216.11:4800", "http://10.4.12.99", "http://10.4.12.99:4800", "http://localhost:4800", "http://localhost:4801"]
