# Database
DATABASE_URL=postgresql+asyncpg://username:password@localhost/data_analysis
# Alternative database configurations:
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/data_analysis
# DATABASE_URL=postgresql+asyncpg://username:password@hostname/data_analysis

# Redis
REDIS_URL=redis://localhost:6379

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production

# Object Storage (S3/MinIO)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET=data-analysis-platform
S3_ENDPOINT_URL=http://localhost:9000  # For MinIO

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Data Analysis Platform

# JMP Configuration
JMP_TASK_DIR=/tmp/jmp_tasks
JMP_MAX_WAIT_TIME=300
JMP_START_DELAY=4

# Guest Access
ALLOW_GUEST_ACCESS=true
GUEST_RATE_LIMIT=10
GUEST_MAX_FILE_SIZE=10485760  # 10MB

# File Upload
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=["text/csv", "application/octet-stream"]

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
